{% block recommendation %}
    {% if products|length %}
        <div class="recommended_items"><!--recommended_items-->
            <h2 class="title text-center">recommended items</h2>

            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {% set count = 0 %}
                    {% for row in products|batch(3) %}
                        {% set count = count +1 %}
                        <div class="item {{ (count == 1) ? "active" : '' }}">
                            {% for product in row %}
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="{{ asset('home/' ~ product.image, 'site_img') }}" alt="" width="268" height="134"/>
                                                <h2>${{ product.price }}</h2>
                                                <p>{{ product.name|e }}</p>
                                                <a href="{{ path('_product', {'idProduct': product.id, 'name': product.name|cleanString, 'idSku': product.sku_id}) }}" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
                <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div><!--/recommended_items-->
    {% endif %}
{% endblock %}